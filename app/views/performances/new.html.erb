<h2 class="account-header">New Performance</h2>

<div class="form">

  <%= form_for [@user, @performance] do |f| %>
    <div class="text-input">
      <%= f.text_field :title, placeholder: "Title" %>
      <span class="separator"> </span>
    </div>

    <div class="text-input">
      <%= f.label :date %>
      <%= f.date_field :date %>
      <span class="separator"> </span>
    </div>

    <div class="button-center">
      <%= f.submit "Add Performance", class: "update-btn" %>
    </div>

    <% end %>

  </div>
