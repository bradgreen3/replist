<div class="upload-container">
  <h1 class="upload-header">Upload Video</h1>
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= form_tag(user_piece_youtube_uploads_path(current_user, @piece), method: :post, multipart: :true) do %>

      <div class="form-group">
        <%= text_field_tag :title, nil, placeholder: "Title", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= text_area_tag :description, nil, placeholder: "Description", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= file_field_tag :file %>
      </div>

      <%= submit_tag 'Upload', class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>

<div class="col-md-4"></div>
