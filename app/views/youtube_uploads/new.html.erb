<div class="container">
  <h1>Upload video</h1>
    <%= form_tag(user_piece_youtube_uploads_path(current_user, @piece), method: :post, multipart: :true) do %>

      <div class="form-group">
        <%= file_field_tag :file %>
      </div>

      <div class="form-group">
        <%= text_field_tag :title, nil, placeholder: "Title" %>
      </div>

      <div class="form-group">
        <%= text_field_tag :description, nil, placeholder: "Description" %>
      </div>

      <%= submit_tag 'Upload', class: 'btn btn-primary' %>
    <% end %>
</div>
