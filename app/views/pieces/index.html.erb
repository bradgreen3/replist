<h3> Repertoire </h3>

<%= button_to 'New Piece', new_user_piece_path(@user), method: :get, class: 'btn btn-default' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Last</th>
      <th>First</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @user.pieces.each do |piece| %>
    <tr>
      <td><%= piece.composer_last %></td>
      <td><%= piece.composer_first %></td>
      <td><%= piece.title %></td>
    </tr>
    <% end %>
  </tbody>
</table>
